---
import BaseLayout from '../layouts/BaseLayout.astro';
import {Hero1} from '@/components/blocks/ui/imageonright.tsx';
import {Feature5} from '@/components/blocks/ui/imageonleft.tsx';
import {Logos4} from '@/components/blocks/ui/scrolldownlogos.tsx'
import {Integration9} from '@/components/blocks/ui/blockforproctoring.tsx';
import {Cta11} from '@/components/blocks/ui/freedemo.tsx';
import {Achievements} from '@/components/blocks/ui/achievements.tsx';
---

<BaseLayout content={{ title: "Assessments Through AI Proctoring Software - Proview",description:"Streamline assessments and ensure integrity with Proview's assessment software through AI proctoring platform. GDPR & CCPA compliant." }}>
  
  <Hero1
    heading="Enhancing Assessment Integrity and Security through AI Proctoring Software"
    description="Proview is a comprehensive automated proctoring platform that ensures exam integrity and streamlined assessment process"
    buttons={{
      primary: { text: "Get a Demo", url: "/signup" }
    }}
    image={{
      src: "/Logos/solutions1.png",
      alt: "Automated proctoring dashboard"
    }}
    blue=true;
  /> 
 <Logos4 heading ='Our Trusted Customers' logos={
   [ {
      id: "logo-1",
      description: "Logo 1",
      image: "/Logos/Cambridge.svg",
      className: "h-7 w-auto",
    },
    {
      id: "logo-2",
      description: "Logo 2",
      image: "/Logos/metlife.png",
      className: "h-7 w-auto",
    },
    {
      id: "logo-3",
      description: "Logo 3",
      image: "/Logos/nvidia-logo.svg",
      className: "h-7 w-auto",
    },
    {
      id: "logo-4",
      description: "Logo 4",
      image: "/Logos/educlever.jpg",
      className: "h-7 w-auto",
    },
    {
      id: "logo-5",
      description: "Logo 5",
      image: "/Logos/tcslogo.png",
      className: "h-7 w-auto",
    },
     {
       id: "logo-6",
       description: "Logo 6",
       image: "/Logos/aaae-logo.svg",
       className: "h-7 w-auto",
     }]
  } />

 <Feature5  title='Ensure assessment validity and reliability' description ='We understand the importance of assessment validity and reliability. Our automated proctoring platform provides valid and reliable assessments through robust test development methodologies and psychometric analysis to accurately measure the candidate knowledge.' imageSrc={'/Logos/solutions.png'} imageAlt={'Certification Picture'} heading ='How Proview helps you conduct Secure Assessments'/>
 
 <Hero1 heading ='Drive innovation in assessment delivery' description='Proview Proctoring Solution leverages advanced AI and machine learning algorithms to detect suspicious behavior. We help assessment providers deliver innovative solutions with our cutting-edge technology while ensuring exam credibility.' image={{src:'/Logos/solutions2.png',alt:'certification image'}}/>

  <Feature5  title='Enhance security and prevent cheating' description ='Our AI-powered remote proctoring technology monitors test-takers in real-time, detecting any suspicious behavior or cheating attempts. Secure Browser and Exam Watermark features ensure the integrity of the assessment process and help prevent cheating effectively.' imageSrc={'/Logos/rounded_cropped_image_4.png'} imageAlt={'Certification Picture'}/>

 <Hero1 heading ='Customization and flexibility for unique assessment needs' description='Our Automated Proctoring Solution offers customizable features, allowing you to tailor the assessment experience to specific requirements. From assessment formats to question types and scoring methods, Proview provides the flexibility to meet your diverse needs.' image={{src:'/Logos/rounded_cropped_image_3.png',alt:'certification image'}}/>
  
 
  <Feature5  title='Ensure data privacy and compliance' description ='Proview adheres to strict data protection measures and complies with data privacy regulations including, GDPR and CCPA. We handle candidate data securely and obtain necessary consents to ensure compliance and protect the privacy of your assessment data.' imageSrc={'/Logos/solutions-person.png'} imageAlt={'Certification Picture'}/>

  <Achievements/>
<Integration9
  title="Key Benefits"
  data={[
    {
      title: 'Multi-Device Support',
      icon: '/Logos/computer.svg'
    },
    {
      title: 'Protect Exam Integrity',
      icon: '/Logos/edit-file.svg'
    },
    {
      title: 'Data Privacy and Compliance',
      icon: '/Logos/lock.svg'
    },
    {
      title: 'Talview Secure Browser',
      icon: '/Logos/shield.svg'
    }
  ]}
/>

<Cta11
  heading="Scale Up Your Exams with Talview's Live Proctoring."
  buttons={{
    primary: {
      text: 'Try free demo',
      url: 'https://www.talview.com/request-a-demo'
    }
  }}
/>

   
</BaseLayout>